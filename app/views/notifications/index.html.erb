<div style="padding-top: 15px; padding-left: 30px; padding-right: 30px">
  <h4> Send push notification to telegram </h4>

  <p><a class="btn btn-secondary" href="<%= best_result_path(index: @index)%>" role="button">Send best result</a></p>

  <% flash.each do |key, message| %>
    <p style="color:#ff0000" class="<%= key %>"><%= message %></p>
  <% end %>

  <table style="width: 600px" class="table table-sm table-bordered">
    <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Result</th>
    </tr>
    </thead>
    <tbody>
    <% @results.each_with_index do |result, index| %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= result.sportsman_name %></td>
        <td><%= result.result %></td>
      </tr>
      </tbody>
    <% end %>
    </table>
</div>
