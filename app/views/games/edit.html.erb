<div style="padding-top: 15px; padding-left: 30px; padding-right: 30px">
  <h3> Editing</h3>
  <%= form_for :game, url: game_path(@game), method: :patch do |f|%>
    <p>
      Name of the game <br>
      <%= f.text_field :game_name%>
    </p>
    <p>
      <br>
      <%= f.submit %>
    </p>
  <% end %>
</div>
